{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
    ],
    "steps": [
      {
        "name": "nodeVMConfiguration",
        "label": "Node virtual machines settings",
        "subLabel": {
          "preValidation": "Configure the node virtual machines settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Node virtual machines settings",
        "elements": [
		  {
			"name": "storageAccount",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
			"toolTip": "Storage account used for deploying virtual machines.",
            "defaultValue": {
				"type": "Standard_LRS"
            }
          },
		  {
            "name": "nodeVMPrefix",
            "type": "Microsoft.Common.TextBox",
            "label": "Node virtual machine prefix",
            "defaultValue": "VM",
            "toolTip": "Prefix for the virtual machines name.",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "nodeVMAdminUsername",
            "type": "Microsoft.Compute.UserNameTextBox",
            "label": "Username",
            "toolTip": "Administrator username for the virtual machines.",
            "osPlatform": "Windows",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "nodeVMAdminPassword",
            "type": "Microsoft.Compute.CredentialsCombo",
            "label": {
              "password": "Password",
              "confirmPassword": "Confirm password"
            },
            "toolTip": {
              "password": "Administrator password for the virtual machines."
            },
            "osPlatform": "Windows",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "databaseVMSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Database Virtual machine size",
            "toolTip": "The size of the virtual machine for the repository database.",
            "recommendedSizes": [
              "Standard_D3",
              "Standard_D4",
              "Standard_D5"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4",
                "Standard_A11",
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4",
                "Standard_D11",
                "Standard_D12",
                "Standard_D13",
                "Standard_D14"
              ]
            },
            "osPlatform": "Windows",
            "imageReference": {
              "publisher": "MicrosoftSQLServer",
              "offer": "SQL2014-WS2012R2",
              "sku": "Enterprise"
            },
            "count": 1
          }
        ]
      },
      {
        "name": "databaseConfiguration",
        "label": "Database settings",
        "subLabel": {
          "preValidation": "Configure the database settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Database settings",
        "elements": [
          {
            "name": "databaseName",
            "type": "Microsoft.Common.TextBox",
            "label": "Database virtual machine name",
            "constraints": {
              "required": true,
              "regex": "^[A-Za-z0-9_]{1,30}$",
              "validationMessage": "Only alphanumeric characters and underscores are allowed, and the value must be 1-30 characters long."
            },
            "options": { }
          },
          {
            "name": "databaseVMSize",
            "type": "Microsoft.Compute.SizeSelector",
            "label": "Database Virtual machine size",
            "toolTip": "The size of the virtual machine for the repository database.",
            "recommendedSizes": [
              "Standard_D3",
              "Standard_D4",
              "Standard_D5"
            ],
            "constraints": {
              "allowedSizes": [
                "Standard_A1",
                "Standard_A2",
                "Standard_A3",
                "Standard_A4",
                "Standard_A11",
                "Standard_D1",
                "Standard_D2",
                "Standard_D3",
                "Standard_D4",
                "Standard_D11",
                "Standard_D12",
                "Standard_D13",
                "Standard_D14"
              ]
            },
            "osPlatform": "Windows",
            "imageReference": {
              "publisher": "MicrosoftSQLServer",
              "offer": "SQL2014-WS2012R2",
              "sku": "Enterprise"
            },
            "count": 1
          },
          {
            "name": "dbVMAdminUsername",
            "type": "Microsoft.Compute.UserNameTextBox",
            "label": "Username",
            "toolTip": "Admin username for the virtual machines.",
            "osPlatform": "Windows",
            "constraints": {
              "required": true,
              "validationMessage": "Only alphanumeric characters and underscore are allowed, and the value must be 1-30"
            }
          },
          {
            "name": "dbVMAdminPassword",
            "type": "Microsoft.Compute.CredentialsCombo",
            "label": {
              "password": "Password",
              "confirmPassword": "Confirm password"
            },
            "toolTip": {
              "password": "Admin password for the virtual machines."
            },
            "osPlatform": "Windows",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "infaDomainDBUser",
            "type": "Microsoft.Common.TextBox",
            "label": "Informatica domain DB user",
            "defaultValue": "",
            "toolTip": "Check Informatica 961HF3 commandline reference document.",
            "constraints": {
              "required": true,
              "regex": "^[a-z0-9A-Z_]{1,30}$",
              "validationMessage": "Only alphanumeric characters and underscore are allowed, and the value must be 1-30"
            }
          },
          {
            "name": "infaDomainDBPassword",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Informatica domain DB password",
              "confirmPassword": "Confirm Informatica domain DB password"
            },
            "constraints": {
              "required": true,
              "regex": "^.{4,}$",
              "validationMessage": "Password must at least 4 characters in length."
            },
            "options": {
              "hideConfirmation": false
            }
          }
        ]
      },
      {
        "label": "Informatica Domain settings",
        "name": "infaDomainConfiguration",
        "subLabel": {
          "preValidation": "Configure the Informatica Domain settings",
          "postValidation": "Done"
        },
        "bladeTitle": "Informatica Domain settings",
        "elements": [
          {
            "name": "infaDomainName",
            "type": "Microsoft.Common.TextBox",
            "label": "Informatica domain name",
            "defaultValue": "Azure_Domain",
            "toolTip": "Check Informatica 961HF3 commandline reference document.",
            "constraints": {
              "required": true,
              "regex": "^[a-z0-9A-Z_]{1,30}$",
              "validationMessage": "Only alphanumeric characters and underscore are allowed, and the value must be 1-30"
            }
          },
          {
            "name": "infaDomainUser",
            "type": "Microsoft.Common.TextBox",
            "label": "Informatica domain user",
            "defaultValue": "Administrator",
            "toolTip": "Check Informatica 961HF3 commandline reference document.",
            "constraints": {
              "required": true,
              "regex": "^[a-z0-9A-Z_]{1,30}$",
              "validationMessage": "Only alphanumeric characters and underscore are allowed, and the value must be 1-30"
            }
          },
          {
            "name": "infaDomainPassword",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Informatica domain password",
              "confirmPassword": "Confirm Informatica domain password"
            },
            "constraints": {
              "required": true,
              "regex": "^.{4,}$",
              "validationMessage": "Password must at least 4 characters in length."
            },
            "options": {
              "hideConfirmation": false
            }

          },
          {
            "name": "infaDomainEncryptionKeyword",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Keyphrase for encryption for domain",
              "confirmPassword": "Confirm keyphrase for encryption for domain"
            },
            "constraints": {
              "required": true,
              "regex": "^.{8,}$",
              "validationMessage": "Keyphrase must at least 8 characters in length."
            },
            "options": {
              "hideConfirmation": true
            }
          },
		  {
            "name": "domainNodeCount",
            "type": "Microsoft.Common.TextBox",
            "label": "Number of nodes required in the Informatica domain",
            "defaultValue": "2",
            "toolTip": "Check Informatica 961HF3 commandline reference document.",
            "constraints": {
              "required": true
            }
          }
        ]
      }
    ],
	
    "outputs": {
      "location": "[location()]",
	  "storageAccountNewOrExisting" : "[steps('infrastructureConfig').storageAccount.newOrExisting]",
      "storageAccountName": "[steps('nodeVMConfiguration').storageAccount.name]",
      "storageAccountType": "[steps('nodeVMConfiguration').storageAccount.type]",
	  "existingStorageAccountRG": "[steps('nodeVMConfiguration').storageAccount.resourceGroup]",
	  "nodeVMPrefix": "[steps('nodeVMConfiguration').nodeVMPrefix]",
	  "nodeVMAdminUsername": "[steps('nodeVMConfiguration').nodeVMAdminUsername]",
	  "nodeVMAdminPassword": "[steps('nodeVMConfiguration').nodeVMAdminPassword]",
	  "databaseName": "[steps('databaseConfiguration').databaseName]",
	  "databaseVMSize": "[steps('databaseConfiguration').databaseVMSize]",
	  "dbVMAdminUsername": "[steps('databaseConfiguration').dbVMAdminUsername]",
	  "dbVMAdminPassword": "[steps('databaseConfiguration').dbVMAdminPassword]",
	  "infaDomainDBUser": "[steps('databaseConfiguration').infaDomainDBUser]",
	  "infaDomainDBPassword": "[steps('databaseConfiguration').infaDomainDBPassword]",
	  "infaDomainName": "[steps('infaDomainConfiguration').infaDomainName]",
	  "infaDomainUser": "[steps('infaDomainConfiguration').infaDomainUser]",
	  "infaDomainPassword": "[steps('infaDomainConfiguration').infaDomainPassword]",
	  "domainNodeCount": "[steps('infaDomainConfiguration').domainNodeCount]"
    }
  }
}